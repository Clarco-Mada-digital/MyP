    <script>
      function initQuiz(data) {
        // Normalisation : On s'assure que la "r√©ponse" stock√©e est bien le texte complet de l'option
        // car l'IA renvoie souvent juste "A", "B", "C" alors que les options sont "A. Texte..."
        const normalizedQuestions = data.map(q => {
          if (q.answer.length < 5) { // Si c'est juste une lettre ou court
             const fullAnswer = q.options.find(opt => 
                opt.trim().startsWith(q.answer + '.') || 
                opt.trim().startsWith(q.answer + ')') || 
                opt.trim().startsWith(q.answer + ' ') ||
                opt.trim() === q.answer
             );
             if (fullAnswer) q.answer = fullAnswer;
          }
          return q;
        });

        return {
          finished: false,
          score: 0,
          answers: [],
          questions: normalizedQuestions,
          checkAnswer(index, option) {
            if (this.finished) return;
            this.answers[index] = option;
          },
          finish() {
            this.score = 0;
            this.questions.forEach((q, i) => {
              if (this.answers[i] === q.answer) this.score++;
            });
            this.finished = true;
          },
          reset() {
            this.finished = false;
            this.score = 0;
            this.answers = [];
          }
        }
      }
    </script>
