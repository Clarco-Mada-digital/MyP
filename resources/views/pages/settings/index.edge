<script>
  function toggleModels(provider) {
    const geminiSection = document.getElementById('models_gemini');
    const ollamaSection = document.getElementById('models_ollama');
    const geminiSelect = document.getElementById('input_model_gemini');
    const ollamaSelect = document.getElementById('input_model_ollama');

    if (provider === 'gemini') {
      geminiSection.classList.remove('hidden');
      ollamaSection.classList.add('hidden');
      geminiSelect.disabled = false;
      if (ollamaSelect) ollamaSelect.disabled = true;
      // Sync actual name input? No, backend just takes 'ai_model' from the enabled select usually or checks provider
      // But wait, both selects have name="ai_model". Only the enabled one should confirm.
      // By default forms submit all successful controls. We need to disable the hidden one.
    } else {
      geminiSection.classList.add('hidden');
      ollamaSection.classList.remove('hidden');
      geminiSelect.disabled = true;
      if (ollamaSelect) ollamaSelect.disabled = false;
    }
  }
</script>
