# Force no-cache for icons and manifest
<Files "manifest.json">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</Files>

<FilesMatch "\.(png|ico)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>

# Add version query parameter support
RewriteEngine On
RewriteCond %{QUERY_STRING} !^v=
RewriteRule ^icons/(.*\.(png|ico)$ /icons/$1?%{ENV:REDIRECT_QUERY_STRING} [L,R=302]
