                   @each(lesson in module.lessons)
                    <div class="bg-slate-50 p-8 rounded-3xl mb-6 shadow-sm border border-slate-200/50 relative group">
                      <div class="flex flex-col md:flex-row justify-between items-start gap-4 mb-6">
