                    <p class="font-bold text-lg mb-4 text-slate-800" x-text="(qIndex + 1) + '. ' + q.question"></p>
                    
                    <div class="grid gap-3">
                      <template x-for="option in q.options">
                        <button 
                          @click="checkAnswer(qIndex, option)"
                          :class="{
                            'w-full text-left p-4 rounded-xl border-2 transition-all font-medium': true,
                            'border-slate-200 hover:border-indigo-300 hover:bg-indigo-50': !answers[qIndex] && !finished,
                            'border-indigo-600 bg-indigo-50 text-indigo-700': answers[qIndex] === option && !finished,
                            'border-green-500 bg-green-50 text-green-700': finished && option === q.answer,
                            'border-red-500 bg-red-50 text-red-700': finished && answers[qIndex] === option && option !== q.answer,
                            'opacity-50': finished && option !== q.answer && answers[qIndex] !== option
                          }"
                          x-text="option"
                          :disabled="finished"
                        ></button>
                      </template>
                    </div>

                    <div x-show="finished && answers[qIndex]" class="mt-4 text-sm p-3 bg-slate-50 rounded-lg text-slate-600">
                      <strong>Explication :</strong> <span x-text="q.explanation"></span>
                    </div>
                  </div>
                </template>

                <div x-show="!finished && answers.length === questions.length" class="text-center">
                  <button @click="finish()" class="bg-indigo-600 text-white font-bold py-3 px-8 rounded-full shadow-lg hover:bg-indigo-700 hover:scale-105 transition-all">
                    Voir les r√©sultats
                  </button>
                </div>

                <div x-show="finished" class="text-center bg-white p-8 rounded-2xl shadow-lg mt-8">
                  <div class="text-5xl mb-4">
                    <span x-show="score === questions.length">üéâ</span>
                    <span x-show="score < questions.length && score > 0">üëç</span>
                    <span x-show="score === 0">üòÖ</span>
                  </div>
                  <h3 class="text-2xl font-bold text-slate-800 mb-2">
                    Score : <span x-text="score"></span> / <span x-text="questions.length"></span>
                  </h3>
                  <p class="text-slate-500 mb-6" x-show="score === questions.length">Excellent ! Vous ma√Ætrisez ce module.</p>
                  <p class="text-slate-500 mb-6" x-show="score < questions.length">Encore un petit effort pour tout retenir.</p>
                  
                  <button @click="finished = false; answers = []; activeQuestion = 0;" class="text-indigo-600 font-bold hover:underline">
                    Recommencer le quiz
                  </button>
                </div>

              </div>
