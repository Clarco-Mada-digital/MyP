                        @end
                      </ul>
                    </div>
                   @end

            {{-- QUIZ SECTION --}}
            @if(module.quiz && module.quiz.length > 0)
              <div x-data="{ 
                  activeQuestion: 0,
                  score: 0,
                  finished: false,
                  answers: [],
                  questions: {{ JSON.stringify(module.quiz) }},
                  checkAnswer(index, option) {
                    if (this.finished) return;
                    this.answers[index] = option;
                    if (option === this.questions[index].answer) {
                      // Correct
                    }
                  },
                  finish() {
                    this.score = 0;
                    this.questions.forEach((q, i) => {
                       if(this.answers[i] === q.answer) this.score++;
                    });
                    this.finished = true;
                  }
               }" class="mt-12 bg-indigo-50 rounded-3xl p-8 border border-indigo-100">
                
                <h4 class="text-xl font-bold text-indigo-900 mb-6 flex items-center gap-2">
                  <span>üß†</span> Quiz de Validation : {{ module.title }}
                </h4>

                <template x-for="(q, qIndex) in questions" :key="qIndex">
